<?xml version="1.0" ?>
<sdf version="1.6">
  <model name="quadrotor">
    <pose>0 0 0.1 0 0 0</pose>
    
    <!-- Base Link -->
    <link name="base_link">
      <pose>0 0 0 0 0 0</pose>
      <inertial>
        <mass>1.5</mass>
        <inertia>
          <ixx>0.029125</ixx>
          <iyy>0.029125</iyy>
          <izz>0.055225</izz>
        </inertia>
      </inertial>
      
      <collision name="base_link_collision">
        <geometry>
          <box>
            <size>0.3 0.3 0.1</size>
          </box>
        </geometry>
      </collision>
      
      <visual name="base_link_visual">
        <geometry>
          <box>
            <size>0.3 0.3 0.1</size>
          </box>
        </geometry>
        <material>
          <ambient>0.8 0.8 0.8 1</ambient>
          <diffuse>0.8 0.8 0.8 1</diffuse>
        </material>
      </visual>
    </link>
    
    <!-- Propeller 1 (Front Left) -->
    <link name="propeller_1">
      <pose>0.15 0.15 0.05 0 0 0</pose>
      <inertial>
        <mass>0.05</mass>
        <inertia>
          <ixx>0.0001</ixx>
          <iyy>0.0001</iyy>
          <izz>0.0001</izz>
        </inertia>
      </inertial>
      
      <visual name="propeller_1_visual">
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>0.01</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.2 0.2 0.2 1</ambient>
        </material>
      </visual>
    </link>
    
    <joint name="propeller_1_joint" type="revolute">
      <parent>base_link</parent>
      <child>propeller_1</child>
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
    </joint>
    
    <!-- Propeller 2 (Front Right) -->
    <link name="propeller_2">
      <pose>-0.15 0.15 0.05 0 0 0</pose>
      <inertial>
        <mass>0.05</mass>
        <inertia>
          <ixx>0.0001</ixx>
          <iyy>0.0001</iyy>
          <izz>0.0001</izz>
        </inertia>
      </inertial>
      
      <visual name="propeller_2_visual">
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>0.01</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.2 0.2 0.2 1</ambient>
        </material>
      </visual>
    </link>
    
    <joint name="propeller_2_joint" type="revolute">
      <parent>base_link</parent>
      <child>propeller_2</child>
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
    </joint>
    
    <!-- Propeller 3 (Back Left) -->
    <link name="propeller_3">
      <pose>0.15 -0.15 0.05 0 0 0</pose>
      <inertial>
        <mass>0.05</mass>
        <inertia>
          <ixx>0.0001</ixx>
          <iyy>0.0001</iyy>
          <izz>0.0001</izz>
        </inertia>
      </inertial>
      
      <visual name="propeller_3_visual">
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>0.01</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.2 0.2 0.2 1</ambient>
        </material>
      </visual>
    </link>
    
    <joint name="propeller_3_joint" type="revolute">
      <parent>base_link</parent>
      <child>propeller_3</child>
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
    </joint>
    
    <!-- Propeller 4 (Back Right) -->
    <link name="propeller_4">
      <pose>-0.15 -0.15 0.05 0 0 0</pose>
      <inertial>
        <mass>0.05</mass>
        <inertia>
          <ixx>0.0001</ixx>
          <iyy>0.0001</iyy>
          <izz>0.0001</izz>
        </inertia>
      </inertial>
      
      <visual name="propeller_4_visual">
        <geometry>
          <cylinder>
            <radius>0.1</radius>
            <length>0.01</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.2 0.2 0.2 1</ambient>
        </material>
      </visual>
    </link>
    
    <joint name="propeller_4_joint" type="revolute">
      <parent>base_link</parent>
      <child>propeller_4</child>
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
    </joint>
    
    <!-- Plugin untuk kontrol -->
    <plugin filename="gz-sim-thruster-system" name="gz::sim::systems::Thruster">
      <namespace>quadrotor</namespace>
    </plugin>
    
    <!-- Plugin untuk odometry -->
    <plugin filename="gz-sim-odometry-publisher-system" name="gz::sim::systems::OdometryPublisher">
      <odometry_frame>world</odometry_frame>
      <robot_base_frame>base_link</robot_base_frame>
      <publish_rate>50</publish_rate>
      <topic>odometry</topic>
    </plugin>
    
    <!-- Plugin untuk IMU -->
    <plugin filename="gz-sim-imu-system" name="gz::sim::systems::Imu">
      <topic>imu</topic>
      <update_rate>100</update_rate>
    </plugin>
    
    <!-- Plugin untuk command velocity -->
    <plugin filename="gz-sim-cmd-system" name="gz::sim::systems::CommandVelocity">
      <topic>cmd_vel</topic>
    </plugin>
  </model>
</sdf>

